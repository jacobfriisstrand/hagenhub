{
  "name": "hagenhub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "docker-compose up -d && concurrently \"next dev\" \"npx prisma studio\"",
    "build": "npx prisma generate && next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "db:push": "npx prisma generate && npx prisma db push",
    "db:seed": "npx prisma db seed",
    "prepare": "husky",
    "check:schema": "git diff --name-only --cached prisma/schema.prisma | grep -q prisma/schema.prisma && npx prisma migrate status || exit 0"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-radio-group": "^1.2.4",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@upstash/redis": "^1.34.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "next": "15.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2",
    "zod-prisma-types": "^3.2.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@eslint-react/eslint-plugin": "^1.38.0",
    "@eslint/eslintrc": "^3",
    "@prisma/client": "^6.5.0",
    "@tailwindcss/postcss": "^4.0.8",
    "@tailwindcss/upgrade": "^4.0.6",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^20.17.28",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/socket.io": "^3.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.6",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-react-refresh": "^0.4.19",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.0",
    "postcss": "^8",
    "prisma": "^6.5.0",
    "tailwindcss": "^4.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.6"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "npm run lint",
    "prisma/schema.prisma": "npm run check:schema"
  }
}
